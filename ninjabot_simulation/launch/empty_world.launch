<?xml version="1.0"?>
<launch>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="model" default="$(find ninjabot_description)/urdf/dexbot.xacro"/>
  <arg name="robot_name" default="ninjabot"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find ninjabot_simulation)/worlds/empty.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro $(find ninjabot_description)/urdf/ninjabot.xacro"/>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -param /robot_description -model $(arg robot_name) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
</launch>
